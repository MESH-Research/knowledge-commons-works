@fontName: "Atkinson Hyperlegible";
@headingFontName: "Atkinson Hyperlegible"; // "Fira Sans"; "Tahoma",

/*-------------------
      Base Sizes
--------------------*/

/* This is the single variable that controls them all */
@emSize: 16px;

/*-------------------
      Fonts
--------------------*/

/* The size of page text  */
@fontSize: 16px;
@fontSizeBase: @fontSize; // 14px;
@fontSizeSmall: 0.8571428571rem; // 12px;
@font-size-small: 12px;
@font-size-tiny: 10px;
@font-size-massive: 36px;

/*-------------------
     Em Sizes
--------------------*/

@75px : unit( (75 / @emSize), rem);
@relative75px : unit( (75 / @emSize), em);

/*-------------------
      Breakpoints
--------------------*/

@mobileBreakpoint: 320px;
@tabletBreakpoint: 768px;
@computerBreakpoint: 992px;
@largeMonitorBreakpoint: 1200px;
@widescreenMonitorBreakpoint: 1920px;

/*-------------------
      Spacing
--------------------*/

@labelBottomMargin: 0.28571429rem;


