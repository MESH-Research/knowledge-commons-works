/*-------------------
      Colors
--------------------*/

@primaryColor: @verdigrisDark;
@secondaryColor: @gold;

@primaryDarkenColor: darken(@primaryColor, 10%);
@primaryTextColor: @verdigrisDark !important;

// backwards compatibility
@brandColor: @primaryColor;
@brand-primary:@primaryColor;
@defaultBrandColor: @ivy; // #434C5E;

@borderColor: @ivy10;

/* ----------------------------
      Semantic state colors
------------------------------- */
@errorTextColor: @salmonDark; // @negativeColor; // = @red
@errorColor: @salmon; // @negativeColor; // = @red
@formErrorColor: @salmonDark;
@formErrorBorder: @negativeBorderColor;
@formErrorBackground: #fff6f6; // lighten(@salmon, 50%);
@inputErrorFocusBackground: @formErrorBackground;
@inputErrorFocusColor: @errorTextColor;
@inputErrorFocusBorder: @formErrorBorder;

@warningColor: @gold;
@warningTextColor: #8d7313; // @darkGold;
@warningBackgroundColor: @gold10;
