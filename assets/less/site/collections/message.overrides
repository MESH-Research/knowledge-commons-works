.ui.message {
  background-color: @seafoam50;
  border: 1px solid @verdigris30;
  color: @verdigrisDark;
  box-shadow: none;

  &.warning {
    box-shadow: none;
    border-color: @warningBorderColor;
    color: @warningTextColor;
    .icon {
      color: @warningColor;
    }
    .header {
      color: @warningTextColor;
    }
  }

  &.flashed {
    .ui.grid.centered {
      text-align: right;
      .ui.icon.button.close-btn {
        margin-top: 0;
      }
    }
  }
}
