/* Segment theme overrides */

.ui.segment {
    &.rdm-sidebar {
        border-color: @sidebarBorderColor;

        &:first-child,
        &:last-child {
            background-color: @sidebarBackgroundColor;
            margin-bottom: 1rem;
        }
    }
}
.sidebar-container {
    &#record-versions {
        .ui.segment {
          display: flex;
          align-items: center;
          &.preview {
            color: @infoTextColor;
            background-color: @infoBackgroundColor;
            border-color: @infoBorderColor;
            div.dropdown {
              border-left: 1px solid @infoBorderColor;
            }
          }
        }
    }
    &#communities {
        .ui.segment {
          background-color: transparent;
          border: none;
          padding: 0;
          .ui.header {
            margin-top: 0;
          }
        }
      }
}

